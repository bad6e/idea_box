<div class="container">
  <div class="row well">
    <div class="col-md-12">
      <%= form_for(@idea) do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <%= f.label :description %>
        <%= f.text_field :description %>
        <%= f.collection_select(:category_id, Category.all, :id, :name ) %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>